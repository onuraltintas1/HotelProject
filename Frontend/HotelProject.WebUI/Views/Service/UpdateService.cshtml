@model HotelProject.WebUI.Dtos.ServiceDto.UpdateServiceDto

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form method="post">
    <input type="hidden" asp-for="ServiceId" />
    <label>Hizmet İkonu</label>
    <input type="text" asp-for="Icon" class="form-control" />
    <span asp-validation-for="Icon" class="text-info"></span>
    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-info"></span>
    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Content" class="form-control" />
    <span asp-validation-for="Content" class="text-info"></span>
    <br />
    <button class="btn btn-primary">Hizmeti Güncelle</button>
</form>